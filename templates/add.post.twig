{# add post view #}

{% extends "layout.twig" %}

{% block title %}{{ parent() }}Ajouter un article{% endblock %}


{% block themeCSS %}../../{{ parent() }}{% endblock %}
{% block awesomeCSS %}../../{{ parent() }}{% endblock %}

{% block contactLink %}"/#web"{% endblock %}

{% block view %}
    {% if not messageInfo %}
        <div class="admin-top-block"></div>
    {% endif %}
    <section id="admin-post" >
        <div  class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Ajouter un article</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <form name="postForm" id="postForm"  method="post" action="/admin/add/post">                  
                        <div class="row control-group ">
                            <div class="form-group col-xs-12 col-sm-6">
                                {{ fieldBuilder(postForm.fields.title, ['placeholder', 'maxlength', 'required'], 'form-control') }}
                            </div>
                            <div class="form-group col-xs-12 col-sm-6">
                                {{ fieldBuilder(postForm.fields.abstract, ['placeholder', 'maxlength', 'required'], 'form-control') }}
                            </div>
                            
                        </div>
            </div>
            
        </div>
    </section>                    

{% endblock %}



{% block themeJS %}../../{{ parent() }}{% endblock %}
