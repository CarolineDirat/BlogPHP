{# admin page view #}

{% extends "layout.twig" %}

{% block title %}{{ parent() }}Administration{% endblock %}


{% block themeCSS %}../../{{ parent() }}{% endblock %}
{% block awesomeCSS %}../../{{ parent() }}{% endblock %}

{% block contactLink %}"/#web"{% endblock %}

{% block view %}
    {% if not messageInfo %}
        <div class="admin-top-block"></div>
    {% endif %}
    <section id="admin" >
        <div  class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 add-post">
                    <a href="/admin/add/post" role="button" class="btn btn-primary btn-lg">Ajouter un Article</a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 table-responsive">
                    <table class="table">
                        <tbody>
                            {% for post in posts %}
                                <tr>
                                    <td>{{ post.dateUpdate|date('d/m/Y')}}</td>
                                    <td>
                                        <a href={{ "/post/#{post.id}/#{post.slug}" }} class="link-post-admin" >
                                            {{ post.title}}
                                        </a>
                                    </td>
                                    <td>
                                        <a href={{ "/admin/comments/#{post.id}" }} role="button" class="btn btn-primary">Commentaires</a>
                                    </td>
                                    <td>
                                        <a href={{ "/admin/update/#{post.id}" }} role="button" class="btn btn-primary">Modifier</a>
                                    </td>
                                    <td>
                                        <a href={{ "/admin/delete/#{post.id}" }} role="button" class="btn btn-primary">Supprimer</a>
                                    </td>
                                </tr
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>                    

{% endblock %}



{% block themeJS %}../../{{ parent() }}{% endblock %}
