{# Home page view #}

{% extends "layout.twig" %}

{% block title %}{{ parent() }}Page d'accueil{% endblock %}

{% block scrollForm %}
    <button type="button" class="btn btn-primary btn-scroll-contact-form">
        <a href="#web" class="">
            <i class="fas fa-angle-double-down fa-lg"></i>
        </a>
    </button>
{% endblock %}



{% block view %}
    <!-- Presentation section -->
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <img class="img-responsive img-logo" src="build/img/logo.png" alt="logo">
                    <div class="intro-text">
                        <span class="name">Caroline Dirat</span>
                        <hr class="star-light">
                        <span class="skills">Web Developer - PHP/Symfony</span>
                        <hr class="star-light">
                        <span class="skills">J'adore coder ! J'adore apprendre !</span>
                    </div>
                    <br/>
                    <div class="col-lg-8 col-lg-offset-2 text-center">
                    <a href="#" class="btn btn-lg btn-outline">
                        <i class="fa fa-download"></i> Mon CV 
                    </a>
                </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Social networks -->
    <footer id="web" class="text-center">
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col">
                        <ul class="list-inline">
                            <li>
                                <a href="https://github.com/CarolineDirat" class="btn-social btn-outline" target="_blank"><i class="fa fa-fw fa-github"></i></a>
                            </li>
                            <li>
                                <a href="https://fr.linkedin.com/company/accueil" class="btn-social btn-outline" target="_blank"><i class="fa fa-fw fa-linkedin" target="_blank"></i></a>
                            </li>
                            <li>
                                <a href="https://twitter.com/explore" class="btn-social btn-outline" target="_blank"><i class="fa fa-fw fa-twitter"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Contact</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <!-- To configure the contact form email address, go to build/mail/contact_me.php and update the email address in the PHP file on line 19. -->
                    <!-- The form should work on most web servers, but if the form is not working you may need to configure your web server differently. -->
                    <form name="contactForm" id="contactForm"  method="post" action="index.php?page=contact">                  
                        <div class="row control-group">
                            <div class="form-group col-xs-12 col-sm-6 floating-label-form-group controls">
                                {{ fieldBuilder(contactForm.fields.firstName, ['placeholder','required', 'maxlength'], 'form-control') }}
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group col-xs-12 col-sm-6 floating-label-form-group controls">
                                {{ fieldBuilder(contactForm.fields.lastName, ['placeholder','required', 'maxlength'], 'form-control') }}
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                {{ fieldBuilder(contactForm.fields.email1, ['placeholder','required', 'maxlength'], 'form-control') }}
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                {{ fieldBuilder(contactForm.fields.email2, ['placeholder','required', 'maxlength'], 'form-control') }}
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                {{ fieldBuilder(contactForm.fields.messageContact, ['placeholder','required', 'rows'], 'form-control') }}
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <img src="{{ captcha }}" alt="image d'un code à recopier"/>
                                <button type="button" class="btn btn-primary btn-captcha-code">
                                    <a href="/">Générer un autre code</a>
                                </button>
                                {{ fieldBuilder(contactForm.fields.captchaPhrase, ['placeholder','required', 'maxlength'], 'form-control') }}
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <br>
                        <div id="success"></div>
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <button type="submit" class="btn btn-success btn-lg">Envoyer</button>
                            </div>
                        </div>                        
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
