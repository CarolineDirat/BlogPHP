{# Home page view #}

{% extends "layout.twig" %}

{% block title %}{{ parent() }}Page d'accueil{% endblock %}



{% block view %}
    <!-- Presentation section -->
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <img class="img-responsive img-logo" src="build/img/logo.png" alt="logo">
                    <div class="intro-text">
                        <span class="name">Caroline Dirat</span>
                        <hr class="star-light">
                        <span class="skills">Web Developer - PHP/Symfony</span>
                        <hr class="star-light">
                        <span class="skills">J'adore coder ! J'adore apprendre !</span>
                    </div>
                    <br/>
                    <div class="col-lg-8 col-lg-offset-2 text-center">
                    <a href="#" class="btn btn-lg btn-outline">
                        <i class="fa fa-download"></i> Mon CV 
                    </a>
                </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Social networks -->
    <footer id="web" class="text-center">
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col">
                        <ul class="list-inline">
                            <li>
                                <a href="https://github.com/CarolineDirat" class="btn-social btn-outline" target="_blank"><i class="fa fa-fw fa-github"></i></a>
                            </li>
                            <li>
                                <a href="https://fr.linkedin.com/company/accueil" class="btn-social btn-outline" target="_blank"><i class="fa fa-fw fa-linkedin" target="_blank"></i></a>
                            </li>
                            <li>
                                <a href="https://twitter.com/explore" class="btn-social btn-outline" target="_blank"><i class="fa fa-fw fa-twitter"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Contact</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <!-- To configure the contact form email address, go to build/mail/contact_me.php and update the email address in the PHP file on line 19. -->
                    <!-- The form should work on most web servers, but if the form is not working you may need to configure your web server differently. -->
                    <form name="contactForm" id="contactForm"  method="post" action="index.php?page=contact">
                        <div class="row control-group">
                            <div class="form-group col-xs-12 col-sm-6 floating-label-form-group controls">
                                <label for="firstName">Prénom</label>
                                <input type="text" class="form-control" placeholder="Prénom" id="firstName" name="firstName" required/>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group col-xs-12 col-sm-6 floating-label-form-group controls">
                                <label for="lastName">Nom</label>
                                <input type="text" class="form-control" placeholder="Nom" id="lastName" name="lastName" required/>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label for="email1">Addresse Email </label>
                                <input type="email" class="form-control" placeholder="Addresse Email" id="email1" name="email1" required/>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label for="email2">Confirmez votre addresse Email </label>
                                <input type="email" class="form-control" placeholder="Confirmez votre addresse Email " id="email2" name="email2" required/>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label for="messageContact">Message</label>
                                <textarea rows="5" class="form-control" placeholder="Message" id="messageContact" name="messageContact" required></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <img src="{{ captcha }}" alt="image d'un code à recopier"/>
                                <button type="button" class="btn btn-primary btn-captcha-code">
                                    <a href="/">Générer un autre code</a>
                                </button>
                                <label for="captchaPhrase">Recopier le code </label>
                                <input type="text" class="form-control" placeholder="Recopier le code" id="captchaPhrase" name="captchaPhrase" required></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <br>
                        <div id="success"></div>
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <button type="submit" class="btn btn-success btn-lg">Envoyer</button>
                            </div>
                        </div>                        
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
